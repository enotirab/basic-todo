extends layout

block content

  div.card
    div.card-header Register

    div.card-body.shadow-sm
      form(action="/register" method="POST")

        div.row.mb-3
          div.col-auto
            label(for="first_name").form-label First Name
            input(type="first_name" name="first_name" id="first_name" required=true).form-control

          div.col-auto
            label(for="last_name").form-label Last Name
            input(type="last_name" name="last_name" id="last_name" required=true).form-control

        div.mb-3
          label(for="email").form-label Email Address
          input(type="email" name="email" id="email" required=true).form-control
          div(class="form-text") This is how you will log in
        div.mb-3
          label(for="password").form-label Password
          input(type="password" name="password" id="password" required=true).form-control
          div( class="form-text") Must be 8-20 characters long.

        div.mb-3
          label(for="password_confirm").form-label Confirm Password
          input(type="password" name="password_confirm" id="password_confirm" required=true).form-control
          div( class="form-text") Must match password.

        button(type="submit").btn.btn-success Register